// custom_behaviors.dtsi
/ {
    behaviors {
        // A key: Tap=A, Hold=Ctrl+A, Double=Ctrl+Shift+A, Triple=Alt+A
        ht_a: hold_tap_a {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLD_TAP_A";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "balanced";
            bindings = <&kp>, <&td_a>;
        };
        
        td_a: tap_dance_a {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_A";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&kp A>, <&kp LC(LS(A))>;
        };

